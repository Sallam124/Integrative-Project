#:import hex kivy.utils.get_color_from_hex
<FlatButton@ButtonBehavior+Label>: #FlatButton inherits from buttonbehavior and label
    font_size: 14

<Operation_Window>: 
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.size
            pos: self.pos

    BoxLayout: # Title bar
        id: header
        size_hint_y: None 
        height: 40
        canvas.before:
            Color:
                rgba:(.06,.45,.45,1)
            Rectangle:
                size:self.size
                pos: self.pos
        height : 50

        Label:
            text:'POS System'
            size_hint_x: .9
            bold: True 
            color: (1,1,1,1)

        Label: 
            id: loggedin_user
            text: 'admin'
            size_hint_y: .9
            bold: True 
            color: (1,1,1,1)

    BoxLayout: #status bar
        id : current 
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba:(.06,.45,.45,1)
            Rectangle:
                size:self.size
                pos: self.pos

        Button:
            text:'Current Item'
            background_normal: ''
            background_color: (.06,.3,.32,1)
            size_hint_x: .4

        Button: 
            id: product 
            text: 'Default Product'
            background_normal: ''
            background_color: (.06,.4,.4,1)

        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (.06,.65,.65,1)
            size_hint_x : .2

    BoxLayout: # product details bar
        padding : 10
        BoxLayout:
            id : Product_details 
            orientation:'vertical'
            size_hint_x: .8
            spacing : 20
            BoxLayout:
                id: product_labels
                size_hint_y : None 
                height : 50 
                canvas.before:
                    Color:
                        rgba: (.2,.55,.55,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                FlatButton:
                    text: 'Qty'
                    size_hint_x : .1

                FlatButton:
                    text: 'Product Code'
                    size_hint_x : .3
                FlatButton:
                    text: 'Disc%'
                    size_hint_x : .1
                FlatButton:
                    text: 'Vat'
                    size_hint_x : .1
                FlatButton:
                    text: 'Price'
                    size_hint_x : .1
                FlatButton:
                    text: 'Total'
                    size_hint_x : .2
            
            BoxLayout: # data input 
                id: product_inputs
                size_hint_y: None
                height : 45
                spacing : 5
                TextInput:
                    id: quantity 
                    size_hint_x : .1
                    multiline: False
                    
                TextInput:
                    id:productcode
                    size_hint_x : .3
                    multiline: False
                    on_text_validate: root.update_purchase()
                TextInput:
                    id: discount
                    size_hint_x : .1
                    multiline: False
                TextInput:
                    id: vat
                    size_hint_x : .1
                    multiline: False
                TextInput:
                    id: price
                    size_hint_x : .1
                    multiline: False
                TextInput:
                    id: total
                    size_hint_x : .2
                    multiline: False

            BoxLayout: 
                id:add_item_to_cart
                orientation:'vertical'
                BoxLayout:
                    size_hint_y: None
                    height : 30
                    spacing : 5
                    canvas.before: 
                        Color: 
                            rgba: (.06,.45,.45,1)
                        Rectangle:
                            pos: self.pos
                            size : self.size
                    Label:
                        text:'Code'
                        size_hint_x:  .1
                    Label:
                        text:'Product Name'
                        size_hint_x: .3
                    Label:
                        text:'Quantity'
                        size_hint_x: .1
                    Label:
                        text:'Disc'
                        size_hint_x: .1
                    Label:
                        text:'Price'
                        size_hint_x: .1
                    Label:
                        text:'Total'
                        size_hint_x: .2
                
                GridLayout:
                    id :products 
                    cols: 1
        BoxLayout:
            id: Preview
            orientation: 'vertical'
            size_hint_x: .2 

            TextInput:
                id: reciept_preview 
                readonly: True # Can't be modified by user
                text: 'Super Serve \n 123 Banafseg.\n The 5th Settlement.Space\n\nTel:(20)10-2928-4678 \nReciept Number: \n Date: \n\n'
    BoxLayout:
        id: footer
        size_hint_y: None
        height : 30
        canvas.before:
            Color : 
                rgba: (.06, .47,.47,1)
            Rectangle: 
                pos : self.pos
                size : self.size
        Label:
            text : 'Maintained by Sallam'
            orientation:'horizontal'