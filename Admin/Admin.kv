#:import hex kivy.utils.get_color_from_hex
<FlatButton@ButtonBehavior+Label>:
    text:'Default'
<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba:hex('#FFFFFF')
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 60
        canvas.before:
            Color:
                rgba:hex('#0F7777FF')
            Rectangle:
                size: self.size
                pos: self.pos

        Spinner:
            id: Menu_bar
            text: 'Menu'
            values: ['Quit']
            size_hint: (0.1, None)
            height: 60  
            on_text:
                if self.text == 'Quit': app.stop()

        Label:
            id: Title
            text: 'Admin Dashboard'
            bold: True
            size_hint: (0.9,None)
            height: 60
            
    BoxLayout:
        id: content_nav
        size_hint_y: 1

        BoxLayout:
            id: Nav_tabs
            size_hint_x: .19
            orientation: 'vertical'
            spacing : 5
            canvas.before:
                Color:
                    rgba:hex('#0F7777FF')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ToggleButton:
                id:user_toggle
                size_hint_y:.1
                text:'Manage Users'
                state: 'down'
                background_color:hex('#0F7777FF')
                background_normal: ''           
            ToggleButton:
                id:product_toggle
                size_hint_y:.1
                text:'Manage Products'
                background_color:hex('#0F7777FF')
                background_normal: '' 
            ToggleButton:
                id:Analysis
                size_hint_y:.1
                text:'Analysis'  
                background_color:hex('#0F7777FF')
                background_normal: ''
            Label:
                id: sp
                text: ''
                size_hint_y: .4
                                    
        BoxLayout: 
            id: content
            size_hint_x: .8
            padding: (20,10)